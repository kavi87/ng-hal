{
  "name": "ng-hal-demo",
  "version": "0.0.0",
  "description": "Hyping thru media with the hypermedia abstraction language.",
  "author": "David Herges <david@spektrakel.de>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn run build:lib && yarn run build:demo",
    "build:demo": "ng build",
    "build:lib": "node src/lib/build.js",
    "postbuild:lib": "rimraf src/demo/ng-hal && cpx \"dist/ng-hal/**/*\" src/demo/ng-hal",
    "ci": "yarn run build && yarn run lint && yarn run test",
    "e2e": "ng e2e",
    "lint": "yarn run lint:demo",
    "lint:demo": "ng lint",
    "lint:lib": "tslint --config src/lib/tslint.json --project src/lib/tsconfig.lib.json",
    "ng": "ng",
    "publish": "NODE_ENV=publish node src/lib/build.js",
    "start": "ng serve",
    "test": "ng test",
    "test:lib": "karma start src/lib/karma.conf.js",
    "test:lib:dev": "karma start src/lib/karma.conf.js --no-single-run --log-level debug"
  },
  "dependencies": {
